<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/firstFragment">

    <fragment

        android:id="@+id/firstFragment"
        android:name="ge.edu.freeuni.navcomponent.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_go_to_second"
            app:destination="@id/secondFragment2" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="ge.edu.freeuni.navcomponent.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third">
        <action
            android:id="@+id/action_go_to_first"
            app:destination="@id/firstFragment"
            app:popUpTo="@id/firstFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment2"
        android:name="ge.edu.freeuni.navcomponent.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second">
        <action

            android:id="@+id/action_go_to_third"
            app:destination="@id/thirdFragment" />
    </fragment>
</navigation>